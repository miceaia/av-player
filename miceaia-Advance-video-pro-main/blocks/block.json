{
    "$schema": "https://schemas.wp.org/wp/6.0/block.json",
    "apiVersion": 3,
    "name": "advanced-video-player/video-player",
    "title": "ðŸŽ¬ Advanced Video Player",
    "description": "Reproductor de videos personalizado",
    "category": "media",
    "icon": "video-alt3",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "src": { "type": "string", "default": "" },
        "type": { "type": "string", "default": "auto" },
        "poster": { "type": "string", "default": "" },
        "width": { "type": "string", "default": "100%" },
        "height": { "type": "string", "default": "500px" },
        "autoplay": { "type": "boolean", "default": false },
        "loop": { "type": "boolean", "default": false },
        "controls": { "type": "boolean", "default": true },
        "playback_rates": { "type": "string", "default": "0.5,0.75,1,1.25,1.5,1.75,2" }
    }
}